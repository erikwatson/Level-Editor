{
  "compilerOptions": {
    "noImplicitAny": false,
    "outDir": "./dest",
    "allowJs": true,
    "target": "es5",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
